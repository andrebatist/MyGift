<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h1>Your Pragmatic Catalog</h1>
<% @products.each do |product| %>  <%# в каждом из атрибутов модели Product%>
    <div class="entry">
        <%= image_tag(product.image_url) %> <%# вывести изображение%>
        <h3><%= product.title %></h3> <%# вывести название в заголовке%>
        <%= sanitize(product.description) %>
        <div class="price_line">
            <span class="price"><%=number_to_currency(product.price, :unit => 'руб', :format => "%n %u")  %></span>
            <%#=sprintf("%.2f RUB",product.price)%>
            <%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true %>
             <%#=line_items_path(product_id: product) %>
        </div>
    </div>
<% end %>
